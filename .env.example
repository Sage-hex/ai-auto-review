# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="AI Auto Review"
APP_VERSION="1.0.0"
APP_URL="http://localhost/AiAutoReview"

# Email Configuration
MAIL_FROM_NAME="AI Auto Review"
MAIL_FROM_EMAIL="noreply@example.com"

# SMTP Configuration
USE_SMTP=true
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_SECURE="tls"

# JWT Authentication
JWT_SECRET="change_this_to_a_secure_random_string"
JWT_EXPIRY=86400

# API Keys
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-pro"

# Mailgun Configuration
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-domain.com"

# Database Configuration
DB_HOST="localhost"
DB_NAME="aiautoreview"
DB_USER="root"
DB_PASSWORD=""

# FastAPI Backend
DATABASE_URL="sqlite:///./fastapi_backend/aiautoreview.db"
SECRET_KEY="replace_with_random_long_secret"
CORS_ORIGINS='["http://localhost:5173"]'
VITE_API_BASE_URL="http://localhost:8000/api/v1"
